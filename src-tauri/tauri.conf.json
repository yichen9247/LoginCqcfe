{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LoginCqcfe",
  "version": "0.1.0",
  "identifier": "com.desktop.logincqcfe",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "width": 1400,
        "height": 800,
        "center": true,
        "shadow": false,
        "minWidth": 1000,
        "minHeight": 600,
        "devtools": false,
        "resizable": false,
        "fullscreen": false,
        "useHttpsScheme": true,
        "title": "重财校园网一键登录系统"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
